{
	"name": "text-summarizer-monorepo",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm --parallel --stream run dev",
		"dev:web": "pnpm --filter @text-summarizer/web run dev",
		"dev:text-api": "pnpm --filter @text-summarizer/text-api run dev",
		"dev:image-api": "pnpm --filter @text-summarizer/image-api run dev",
		"build": "pnpm --recursive run build",
		"build:web": "pnpm --filter @text-summarizer/web run build",
		"build:text-api": "pnpm --filter @text-summarizer/text-api run build",
		"build:image-api": "pnpm --filter @text-summarizer/image-api run build",
		"install:all": "pnpm install"
	},
	"devDependencies": {
		"pnpm": "^9.14.4"
	},
	"packageManager": "pnpm@9.14.4"
}
